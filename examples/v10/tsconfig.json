{
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["ES2019", "DOM"],
    "module": "commonjs",
    "target": "ES2019",
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
